!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}
    %title un&middot;friend&middot;ly
    <style type="text/css">
    body{padding-top: 20px;padding-bottom: 40px;}
    p{font-size:1.2em}
    li{font-size:1.1em}
    =".container-narrow {margin: 0 auto;max-width: 700px;}"
    =".container-narrow > hr {margin: 30px 0;}"
    =".jumbotron {margin: 60px 0;text-align: center;}"
    =".jumbotron h1 {font-size: 72px;line-height: 1;}"
    =".jumbotron .btn {font-size: 21px;padding: 14px 24px;}"
    =".marketing {margin: 60px 0;}"
    =".marketing p + h4 {margin-top: 28px;}"
    =".activity {margin-left: 10px}"
    =".activity ul {list-style: none}"
    =".activity ul li {padding-bottom: 8px}"
    </style>
    %link{:href => "/css/bootstrap-responsive.min.css", :rel => "stylesheet"}
  %body
    %div.container-narrow
      %div.masthead
        - unless request.path_info == "/"
          %ul{:class => "nav nav-pills pull-right"}
            %li{:class => (request.path_info == "/check") ? "active" : nil}
              %a{:href => "check"} Check for Changes
            - if session[:twitter]
              %li
                %a{:href => "logout"} Log Out
            
        %h3.muted un&middot;friend&middot;ly
      %hr
      =yield
  